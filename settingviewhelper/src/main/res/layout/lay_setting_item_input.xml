<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
                android:minHeight="@dimen/common_setting_item_height"
    android:background="@drawable/bg_layout_selector" >

    <ImageView
        android:id="@+id/setting_item_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/setting_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/setting_item_icon"
        android:ellipsize="middle"
        android:gravity="left"
        android:maxEms="13"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/common_title_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/setting_item_input_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/setting_item_text"
        android:background="@null"
        android:ellipsize="end"
        android:maxLines="5"
        android:maxLength="80"
        android:textColor="@color/common_subtitle_color"
        android:textSize="16sp" />

</RelativeLayout>