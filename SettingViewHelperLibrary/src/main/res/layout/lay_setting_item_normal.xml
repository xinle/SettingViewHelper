<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
                android:minHeight="@dimen/common_setting_item_height"
    android:background="@drawable/bg_layout_selector" >

    <ImageView
        android:id="@+id/setting_item_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/setting_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/setting_item_icon"
        android:ellipsize="middle"
        android:gravity="left"
        android:maxEms="13"
        android:layout_centerVertical="true"
        android:textColor="@color/common_title_color"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/setting_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/icon_arrow_right_normal" />

    <TextView
        android:id="@+id/setting_item_right_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/setting_item_arrow"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/common_subtitle_color"
        android:layout_toRightOf="@id/setting_item_text"
        android:gravity="right"
        android:textSize="16sp" />

</RelativeLayout>